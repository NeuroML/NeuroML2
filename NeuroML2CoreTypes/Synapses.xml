                   extends="baseSynapse"
                   description="STILL IN DEVELOPMENT!!!!">
    </ComponentType>
    
    <ComponentType name="silentSynapse"
                   extends="baseGradedSynapse"
                   description="Dummy synapse which emits no current. Used as presynaptic endpoint for analog synaptic connection. STILL IN DEVELOPMENT!!!!">
        
        <Exposure name="i" dimension="current"/>
        
        <Requirement name="v" dimension="voltage"/>

        <InstanceRequirement name="peer" type="baseGradedSynapse"/>

        <Dynamics>
