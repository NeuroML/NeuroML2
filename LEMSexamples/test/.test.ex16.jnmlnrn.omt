# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
 
target: ../LEMS_NML2_Ex16_Inputs.xml 
engine: jNeuroML_NEURON
mep: .test.ex16.mep
experiments:
  sine:
    observables:
      spike times:
        file: 
          path: ../results/ex16_v.dat
          columns: [0,2]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.
  array:
    observables:
      spike times:
        file: 
          path: ../results/ex16_v.dat
          columns: [0,5]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -58.6
        tolerance:  0.00
  compound:
    observables:
      spike times:
        file: 
          path: ../results/ex16_v.dat
          columns: [0,10]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance:  0.00
  
