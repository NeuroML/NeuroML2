# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
 
target: ../LEMS_NML2_Ex6_NMDA.xml 
engine: jNeuroML_NEURON
mep: .test.ex6.mep
experiments:
  v:
    observables:
      spike times:
        file: 
          path: ../results/ex6_v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -32
        tolerance: 0
  g:
    observables:
      spike times:
        file: 
          path: ../results/ex6_g.dat
          columns: [0,1]
          scaling: [1000, 1]
        spike detection: 
          method: threshold
          threshold: 1e-11
        tolerance: 0
  block:
    observables:
      spike times:
        file: 
          path: ../results/ex6_block.dat
          columns: [0,1]
          scaling: [1000, 1]
        spike detection: 
          method: threshold
          threshold: 0.18
        tolerance: 0

  spiketimes:
    observables:
      spike times:
        spiketimes file: 
          path: ../results/ex6.input.spikes
          format: ID_TIME
          id: 0
        tolerance: 0

  spikerate:
    observables:
      spike rate:
        spiketimes file: 
          path: ../results/ex6.input.spikes
          format: ID_TIME
          id: 0
        tolerance: 0

