# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
 
target: ../LEMS_NML2_Ex0_IaF.xml 
engine: PyLEMS_NeuroML2
mep: .test.ex0.mep
experiments:
  iafTauPop0:
    observables:
      spike times:
        file: 
          path: ../results/iaf_v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -55.1
        tolerance: 0
  iafTauRefPop0:
    observables:
      spike times:
        file: 
          path: ../results/iaf_v.dat
          columns: [0,2]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -55.1
        tolerance: 5e-4
